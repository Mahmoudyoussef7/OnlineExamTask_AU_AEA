@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="row justify-content-center">
    <div class="col-lg-4">
                <h3 class="card-title">Login</h3>
            <form method="post" asp-action="Login" asp-controller="Account">
                            @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="Email" class="form-label mt-4">Email </label>
                    <input type="email" class="form-control" id="Email" name="Email" aria-describedby="emailHelp" placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password" class="form-label mt-4">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required placeholder="Password" autocomplete="off">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                 <div class="form-group">
                    <p>
                        <a asp-action="Register" asp-controller="Account">Register as a new user?</a>
                    </p>
                 </div>
            </form>
        </div>
    </div>
</div>
