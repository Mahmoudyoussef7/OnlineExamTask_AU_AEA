@model OnlineExam.UI.Models.QuestionViewModel

@{
    ViewData["Title"] = "AddQuestion";
}

<h1>AddQuestion</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AddQuestion" asp-controller="Mangement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input type="text" asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionType" class="control-label"></label>
                <select id="QuestionType" name="QuestionType" class="form-control">
                    @foreach (var type in ViewBag.QuestionTypes.Items)
                    {
                        <option value="@type.Id">@type.TypeName</option>
                    }
                </select>
                <span asp-validation-for="QuestionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAnswer" class="control-label"></label>
                <input type="text" asp-for="CorrectAnswer" class="form-control" />
                <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input type="number" asp-for="Points" class="form-control" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group justify-content-center">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Finish</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
